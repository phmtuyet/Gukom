<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="mrp_inherit_view_picking_type_form" model="ir.ui.view">
        <field name="name">mrp.inherit.view.picking.type.form</field>
        <field name="model">stock.picking.type</field>
        <field name="inherit_id" ref="stock.view_picking_type_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='company_id']" position="after">
                <field name="pack_production"
                       attrs="{'invisible': [('code', '!=', 'mrp_operation')]}"/>
                <field name="package_type_id"
                       attrs="{'invisible': [('code', '!=', 'mrp_operation')],
                       'required': [('pack_production', '=', True)]}"/>
            </xpath>
        </field>
    </record>

</odoo>
